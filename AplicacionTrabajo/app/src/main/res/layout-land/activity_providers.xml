<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Providers">

    <Button
        android:id="@+id/button_consultar"
        android:layout_width="385dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="68dp"
        android:onClick="click_consultar"
        android:text="@string/ver_contactos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_insert"
        android:layout_width="385dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:onClick="crearContacto"
        android:text="@string/insertar_contacto"
        app:layout_constraintBottom_toTopOf="@+id/button_consultar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_modificacion"
        android:layout_width="385dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"
        android:onClick="modificarContactos"
        android:text="@string/modificar_contacto"
        app:layout_constraintBottom_toTopOf="@+id/button_eliminar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="388dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:text="@string/contactos"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_eliminar"
        android:layout_width="385dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:onClick="borrarContacto"
        android:text="@string/eliminar_contacto"
        app:layout_constraintBottom_toTopOf="@+id/button_insert"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="269dp"
        android:layout_height="371dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

</androidx.constraintlayout.widget.ConstraintLayout>